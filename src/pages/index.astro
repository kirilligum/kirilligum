---
import { getCollection } from 'astro:content';
const blogPosts = await getCollection('blog');
const projectsPosts = await getCollection('projects');
projectsPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf()); // Sort projects by date
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="A personal homepage in the style of brutalism and nature." />
		<title>Kirill Igumenshchev - Homepage</title>
		<style>
			body {
				font-family: monospace;
				background-color: #f0f0f0; /* Light gray background */
				color: #222; /* Dark text for contrast */
				margin: 2rem;
			}
			h1, h2, h3 {
				font-weight: bold;
				line-height: 1.1;
				margin-bottom: 0.5rem;
			}
			section {
				margin-bottom: 2rem;
				padding: 1rem;
				border: 2px solid #222; /* Basic border for sections */
			}
			a {
				color: #007bff; /* Example link color */
				text-decoration: none;
			}
			a:hover {
				text-decoration: underline;
			}
		</style>
	</head>
	<body>
		<header>
			<h1>Kirill Igumenshchev</h1>
		</header>
		<section id="about">
			<h2>About Me</h2>
			<p>
				Hi, I'm Kirill Igumenshchev. Write a brief introduction about yourself here.
				<br><br>
				<a href="https://x.com/kirill_igum">X (Twitter)</a> | <a href="https://github.com/kirilligum/">GitHub</a> | <a href="https://www.linkedin.com/in/kirilligum/">LinkedIn</a>
			</p>
		</section>
		<section id="blog">
			<h2>Blog</h2>
			<ul>
				{blogPosts.map((post) => (
					<li>
						<a href={`/blog/${post.slug}`}>{post.data.title}</a>
					</li>
				))}
			</ul>
		</section>
		<section id="projects">
			<h2>Projects</h2>
			<ul>
				{projectsPosts.map((post) => (
					<li>
						<h3>{post.data.title}</h3>
						<p>{post.data.description}</p>
						{post.data.liveLink && <p><a href={post.data.liveLink} target="_blank">Live Demo</a></p>}
						{post.data.githubLink && <p><a href={post.data.githubLink} target="_blank">GitHub</a></p>}
						{post.data.tags && post.data.tags.length > 0 && <p>Tags: {post.data.tags.join(', ')}</p>}
						<p style="font-size: 0.8em; color: #777;">Date: {post.data.date.toLocaleDateString()}</p>
						<hr/>
					</li>
				))}
			</ul>
		</section>
		<section id="resume"><h2>Resume</h2><p><a href="#">Link to your resume</a></p></section>
	</body>
</html>
